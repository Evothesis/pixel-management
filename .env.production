# .env.production
# Production environment configuration for Cloud Run

# Database (SQLite for MVP, can upgrade to Cloud SQL later)
DATABASE_URL=sqlite:///app/pixel_management.db

# Admin credentials (will be set as secrets)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=REPLACE_WITH_GENERATED_PASSWORD
SECRET_KEY=REPLACE_WITH_GENERATED_SECRET

# Application settings
ENVIRONMENT=production
PORT=8080

# CORS settings (update with your actual domain)
CORS_ORIGINS=["https://your-domain.com"]

# Logging
LOG_LEVEL=INFO

# Feature flags
ENABLE_RATE_LIMITING=true
ENABLE_REQUEST_LOGGING=true